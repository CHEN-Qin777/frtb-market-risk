# %% Imports
import numpy as np
import pandas as pd
import yfinance as yf
import matplotlib.pyplot as plt
import seaborn as sns

# Pour la reproductibilité
np.random.seed(42)

# %% Fonctions de téléchargement robuste (intégrées)
def telecharger_donnees(tickers, debut, fin):
    try:
        data = yf.download(tickers, start=debut, end=fin, progress=False)
        if data.empty:
            raise ValueError("Aucune donnée")
        if 'Adj Close' in data.columns:
            prices = data['Adj Close']
        elif 'Close' in data.columns:
            prices = data['Close']
        elif isinstance(data.columns, pd.MultiIndex) and 'Close' in data.columns.get_level_values(0):
            prices = data['Close']
        else:
            prices = data.iloc[:, 0]
        if isinstance(prices, pd.Series):
            prices = prices.to_frame(name=tickers[0] if isinstance(tickers, list) else tickers)
        return prices
    except Exception as e:
        print(f"Erreur: {e}, utilisation de données synthétiques")
        dates = pd.date_range(start=debut, end=fin, freq='B')
        prix = pd.DataFrame(index=dates)
        for t in tickers:
            prix[t] = 100 * np.exp(np.random.randn(len(dates)).cumsum() / 100)
        return prix

def calculer_rendements(prix):
    return np.log(prix / prix.shift(1)).dropna()

# %% Téléchargement
tickers = ['SPY', 'TLT', 'GLD']
debut = '2015-01-01'
fin = '2023-12-31'
prix = telecharger_donnees(tickers, debut, fin)
rendements = calculer_rendements(prix)

# %% Portefeuille équipondéré
poids = np.ones(3) / 3
rend_ptf = rendements.dot(poids)

# %% ES historique et stressé
def es_historique(rend, niveau=0.975):
    var = np.percentile(rend, 100*(1-niveau))
    return rend[rend <= var].mean()

def es_stresse(rend, fenetre=250, niveau=0.975, n_top=60):
    es_gliss = []
    for i in range(fenetre, len(rend)):
        es_gliss.append(es_historique(rend[i-fenetre:i], niveau))
    es_gliss = np.array(es_gliss)
    return np.mean(np.sort(es_gliss)[-n_top:])

es_hist = es_historique(rend_ptf, 0.975)
es_stress = es_stresse(rend_ptf, 250, 0.975, 60)
print(f"ES historique (97.5%) : {es_hist:.6f}")
print(f"ES stressé (moyenne 60 pires périodes) : {es_stress:.6f}")

# %% Capital SA Delta (exemple simplifié)
# On considère des sensibilités fictives aux actions, obligations, or
sensi = np.array([100000, -50000, 20000])   # sensibilités en euros
rw = np.array([0.55, 0.65, 0.40])           # poids de risque
corr = np.array([[1.0, 0.3, 0.2],
                 [0.3, 1.0, 0.1],
                 [0.2, 0.1, 1.0]])

def sa_delta_capital(s, rw, corr):
    sw = s * rw
    return np.sqrt(np.dot(sw, np.dot(corr, sw)))

capital_sa = sa_delta_capital(sensi, rw, corr)
print(f"Capital Delta SA : {capital_sa:.2f} €")

# %% Capital IMA (approximatif)
facteur_ima = 1.5
capital_ima_rend = es_stress * facteur_ima * np.sqrt(10)  # horizon 10 jours
print(f"Capital IMA (en rendement équivalent) : {capital_ima_rend:.6f}")

# %% Backtest sur VaR 99%
var_99 = np.percentile(rend_ptf, 1)  # VaR 99% historique
exceptions = np.sum(rend_ptf < var_99)
n = len(rend_ptf)
p_theo = 0.01
if exceptions > 0 and exceptions < n:
    LR = -2 * ((n-exceptions)*np.log(1-p_theo) + exceptions*np.log(p_theo) -
               ((n-exceptions)*np.log(1-exceptions/n) + exceptions*np.log(exceptions/n)))
    from scipy.stats import chi2
    p_value = 1 - chi2.cdf(LR, 1)
else:
    p_value = 0.0
print(f"Test de Kupiec (VaR 99%) : p-valeur = {p_value:.4f}")

# %% Visualisation des ES glissants
es_glissant = []
for i in range(250, len(rend_ptf)):
    es_glissant.append(es_historique(rend_ptf[i-250:i], 0.975))
plt.figure(figsize=(12,5))
plt.plot(rend_ptf.index[250:], es_glissant, label='ES 97.5% glissant (250j)')
plt.axhline(es_stress, color='red', linestyle='--', label='ES stressé (moyenne 60 pires)')
plt.legend()
plt.title('Expected Shortfall glissant et niveau de stress')
plt.xlabel('Date')
plt.ylabel('ES')
plt.grid(True)
plt.show()
